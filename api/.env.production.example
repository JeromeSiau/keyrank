# =================================================================
# PRODUCTION ENVIRONMENT TEMPLATE
# =================================================================
# Copy this file to .env on your production server and fill in values.
# NEVER commit your .env file to version control!
# =================================================================

# Application Settings
APP_NAME=Keyrank
APP_ENV=production
APP_KEY=  # Run: php artisan key:generate
APP_DEBUG=false
APP_URL=https://api.keyrank.app
FRONTEND_URL=https://keyrank.app

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

# Performance
BCRYPT_ROUNDS=12

# Logging - Use daily rotation in production
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Database - Use MySQL/PostgreSQL in production
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=keyrank
DB_USERNAME=keyrank
DB_PASSWORD=  # Strong password required

# Session Security
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.keyrank.app
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# Sanctum Token Expiration (minutes)
# Tokens expire after this many minutes of inactivity
SANCTUM_TOKEN_EXPIRATION=60

# CORS - ONLY allow your production frontend
CORS_ALLOWED_ORIGINS=https://keyrank.app,https://app.keyrank.app

# Queue & Cache - Use Redis in production
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
CACHE_PREFIX=keyrank_

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=  # Set if Redis has auth
REDIS_PORT=6379

# Mail (Brevo/Sendinblue recommended)
MAIL_MAILER=smtp
MAIL_SCHEME=tls
MAIL_HOST=smtp-relay.brevo.com
MAIL_PORT=587
MAIL_USERNAME=  # Your Brevo SMTP login
MAIL_PASSWORD=  # Your Brevo SMTP key
MAIL_FROM_ADDRESS=alerts@keyrank.app
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 (optional - for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Google Play Scraper Service
GPLAY_SCRAPER_URL=http://localhost:3001

# Apple Search Ads API
APPLE_SEARCH_ADS_CLIENT_ID=
APPLE_SEARCH_ADS_TEAM_ID=
APPLE_SEARCH_ADS_KEY_ID=
APPLE_SEARCH_ADS_PRIVATE_KEY_PATH=
# Or use inline key (with \n for newlines):
# APPLE_SEARCH_ADS_PRIVATE_KEY=

# Firebase Cloud Messaging
FCM_PROJECT_ID=
FCM_CREDENTIALS=  # Path to firebase service account JSON

# Stripe Billing (use LIVE keys in production)
STRIPE_KEY=pk_live_xxx
STRIPE_SECRET=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
CASHIER_CURRENCY=usd

# =================================================================
# SECURITY CHECKLIST
# =================================================================
# Before deploying to production, ensure:
# [ ] APP_DEBUG is set to false
# [ ] APP_KEY is generated and secure
# [ ] Database password is strong
# [ ] SESSION_SECURE_COOKIE is true
# [ ] CORS_ALLOWED_ORIGINS only contains your domains
# [ ] All API keys use production/live credentials
# [ ] Redis password is set if publicly accessible
# [ ] HTTPS is configured on your web server
# [ ] File permissions are restrictive (644 for files, 755 for dirs)
# =================================================================
